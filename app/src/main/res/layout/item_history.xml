<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="5dp"
    app:cardBackgroundColor="@color/white"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Status Icon -->
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp">

            <ImageView
                android:id="@+id/icon_background"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/circle_green"
                android:contentDescription="Status background" />

            <ImageView
                android:id="@+id/icon_status"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_check_circle"
                android:contentDescription="Status Icon"
                app:tint="#FFFFFF" />
        </FrameLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Medicine Name -->
            <TextView
                android:id="@+id/text_medicine_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paracetamol"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#222222"
                android:fontFamily="sans-serif-medium" />

            <!-- Time Taken -->
            <TextView
                android:id="@+id/text_medicine_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Taken at 8:00 AM"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <!-- Date Taken -->
            <TextView
                android:id="@+id/text_medicine_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date: Oct 20, 2025"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <!-- Status -->
            <TextView
                android:id="@+id/text_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Taken"
                android:textColor="#3BB143"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>