<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚙️ Settings"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif-medium"
            android:gravity="start"
            android:layout_marginBottom="16dp" />

        <!-- Card Container -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/settingsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF"
            app:strokeWidth="1dp"
            app:strokeColor="#E2E8F0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Notifications Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔔 Notifications"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="12dp" />
            
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchNotifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable Notifications"
                android:textSize="16sp"
                android:layout_marginBottom="12dp" />
            
            <!-- Select Sound Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/selectSoundBtn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Select Alarm Sound"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textColor="@color/primary"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:iconGravity="textStart"
                app:cornerRadius="16dp"
                app:strokeColor="@color/primary"
                app:icon="@null"
                android:layout_marginBottom="24dp" />

            <!-- Vibration Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📳 Vibration"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />
            
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchVibration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable Vibration"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />
            
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchSilentMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Silent Mode (Vibration Only)"
                android:textSize="16sp"
                android:layout_marginBottom="12dp" />

            <!-- Data Management Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💾 Data Management"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackupData"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="📤 Backup Data"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textColor="@color/primary"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:cornerRadius="16dp"
                android:layout_marginBottom="8dp" />
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRestoreData"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="📥 Restore Data"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textColor="@color/primary"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:cornerRadius="16dp"
                android:layout_marginBottom="8dp" />
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeleteHistory"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="🗑️ Delete All History"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textColor="@color/error"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:cornerRadius="16dp"
                app:strokeColor="@color/error"
                android:layout_marginBottom="12dp" />

            <!-- Views Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📊 Views"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCalendarView"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="📅 Calendar View"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textColor="@color/primary"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:cornerRadius="16dp"
                android:layout_marginBottom="12dp" />

            <!-- About Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ℹ️ About"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAppGuide"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="📖 App Guide"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textColor="@color/primary"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:cornerRadius="16dp"
                app:strokeColor="@color/primary"
                android:layout_marginBottom="12dp" />

            <!-- App Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/gradient_card_secondary"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MedTrack"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Health Companion"
                    android:textSize="14sp"
                    android:textColor="#FFFFFFCC"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Version 1.0.0"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF99"
                    android:layout_marginTop="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#FFFFFF40"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="© 2025 Abdul David Paito"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All rights reserved"
                    android:textSize="12sp"
                    android:textColor="#FFFFFFCC"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
