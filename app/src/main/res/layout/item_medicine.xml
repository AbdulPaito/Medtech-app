<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#FCEBFF">

    <!-- 💜 Header Title -->
    <TextView
        android:id="@+id/text_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pending Medicine Reminders"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#4A148C"
        android:gravity="center_horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="12dp" />

    <!-- 💊 Medicine Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- 🧾 Medicine Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_medicine_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medicine Name: Paracetamol"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/text_dosage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="💊 Dosage: 500mg"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/text_instructions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📝 Instructions: Take after meal"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="6dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⏰ Time:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/text_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3:00 PM"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📅 Date: Oct 20, 2025"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="6dp" />




                <TextView
                    android:id="@+id/text_frequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔁 Frequency: Daily"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="2dp" />

                <!-- ✅ Two Buttons: Taken or Missed -->
                <LinearLayout
                    android:id="@+id/layout_mark_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:weightSum="2">

                    <!-- ✅ Mark as Taken -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_mark_taken"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Taken"
                        android:textAllCaps="true"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#4CAF50"
                        app:cornerRadius="28dp"
                        app:icon="@drawable/ic_check_circle"
                        app:iconTint="#FFFFFF"
                        app:iconPadding="8dp"
                        app:iconGravity="textStart" />

                    <!-- ❌ Missed -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_mark_missed"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Missed"
                        android:textAllCaps="true"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#FF5252"
                        app:cornerRadius="28dp"
                        app:icon="@drawable/ic_close_circle"
                        app:iconTint="#FFFFFF"
                        app:iconPadding="8dp"
                        app:iconGravity="textStart" />
                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
